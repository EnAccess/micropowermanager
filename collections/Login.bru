meta {
  name: Login
  type: http
  seq: 1
}

post {
  url: {{mpm_backend_url}}/api/auth/login
  body: json
  auth: none
}

body:json {
  {
    "email": "{{email}}",
    "password": "{{password}}"
  }
}

assert {
  res.status: eq 200
  res.body.access_token: isString
}

script:post-response {
  bru.setEnvVar("jwt_token", res.body.access_token);
}
