FROM node:20.18-alpine3.20

WORKDIR /app

# get MicroPowerManager source code and configuration
VOLUME ["/app/"]

# Copy the entrypoint script to the container and make it executable
COPY docker/entrypoint-frontend-dev.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/entrypoint-frontend-dev.sh

# serve the application via entrypoint script
ENTRYPOINT ["/usr/local/bin/entrypoint-frontend-dev.sh"]

EXPOSE 8080
